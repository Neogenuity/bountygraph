{
  "name": "bountygraph-monorepo",
  "version": "0.1.0",
  "description": "BountyGraph - On-chain proof-of-work receipts and dependency graphs",
  "private": true,
  "workspaces": [
    "api",
    "ui"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:anchor": "TS_NODE_TRANSPILE_ONLY=1 TS_NODE_PROJECT=tsconfig.json mocha tests/bountygraph.test.js --require ts-node/register --timeout 60000",
    "test:api": "TS_NODE_TRANSPILE_ONLY=1 TS_NODE_PROJECT=api/tsconfig.json mocha api/tests/**/*.test.js --require ts-node/register --timeout 30000",
    "test:all": "npm run test:anchor && npm run test:api",
    "lint": "npm run lint --workspaces",
    "ci": "npm run test:all && npm run build",
    "devnet:deploy": "anchor deploy --provider.cluster devnet",
    "devnet:test": "anchor test --provider.cluster devnet"
  },
  "keywords": [
    "solana",
    "bounty",
    "verification",
    "escrow",
    "agent",
    "hackathon"
  ],
  "author": "neogenuity",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "chai": "^4.3.10",
    "mocha": "^11.7.2",
    "ts-node": "^10.9.2"
  }
}
